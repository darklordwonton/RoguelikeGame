package main.dungeon;

public class Room {
	protected int x = 0;
	protected int y = 0;
	protected int sizeX = 0;
	protected int sizeY = 0;
	protected boolean[][] wall;
	
	public Room (){
		x = 1;
		y = 1;
		wall = new boolean [x][y];
		sizeX = 1;
		sizeY = 1;
	}
	
	public Room(int a, int b){
		x = a;
		y = b;
		wall = new boolean [x][y];
	}
	
	public void basicRoom(){
		sizeX = (int)(Math.random() * 2 + 1);
		sizeY = (int)(Math.random() * 2 + 1);
		for (int i = 0; i < sizeY; i++){
			for (int e = 0; e < sizeX; e++){
				wall[e][i] = false;
			}
		}
	}
	
	public boolean[][] wallLayout (){
		return wall;
	}
	
	public int getX(){
		return x;
	}
	
	public int getY(){
		return y;
	}
	
}
