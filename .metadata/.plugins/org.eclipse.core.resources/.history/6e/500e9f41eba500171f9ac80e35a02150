package main.magic;

import main.attacks.Attack;
import main.attacks.EnumAttackType;

public class Spell {
	Attack attack = null;
	String name = "";
	int value = 0;
	int manaCost = 0;
	
	public Spell(){
		attack = null;
		name = "";
		manaCost = 0;
		
		value = 0;
	}
	
	public Spell(Attack a, String n, int m){
		attack = a;
		name = n;
		manaCost = m;
		
		value = 0;
	}
	
}
