package main;

import main.actions.ActionHandler;
import main.util.ControlManager;
import main.util.Globals;
import main.util.Initializer;

public class Main {
		
	public static void main(String [] args){
		Initializer.start();
		while (true) {
			Integer[] keys = ControlManager.getQueue();
			if (keys != null) {
				for (Integer key : keys) {
					if (key != null)
						ActionHandler.command(key.intValue(), Globals.player);
				}
			}
		}
	}
}
